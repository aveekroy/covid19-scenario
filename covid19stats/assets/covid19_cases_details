echo "Enter the Province/State name:"
read state
echo "Enter the Country/Region name:"
read country
echo "Please find the details below"

YLW='\033[1;33m'
GRN='\033[0;32m'
RED='\033[0;31m'
NC='\033[0m'

for i in `ls -l *.csv|awk -F' ' '{print $9}'`
do
cat $i|grep -w "${country}"|grep -w "${state}"|awk -F',' '{print $3"---> Confirmed: "$4" ----- Deaths: "$5" ----- Recovered: "$6}'
done
